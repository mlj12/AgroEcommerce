<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail">

    <ImageView
        android:id="@+id/p_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/baseline_insert_photo_white_18dp"
        android:scaleType="centerCrop"

        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/p_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_image"
        android:text="Product Name"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/p_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_name"
        android:text="Product Price"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/p_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_price"
        android:text="Product Description"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/quantity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/p_description"
        android:layout_marginTop="100dp"
        app:textSize="9dp"
        >

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/add_to_cart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:backgroundTint="@color/colorPrimary"
        android:layout_below="@id/quantity_btn"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        />


</RelativeLayout>